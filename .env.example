# Server Configuration
PORT=5000
NODE_ENV=development # Set to 'production' in production
CORS_ORIGIN=http://localhost:3000 # Frontend URL

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/authenticator
# For Docker:
# MONGODB_URI=mongodb://mongo:27017/authenticator

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_at_least_32_chars_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_at_least_32_chars_long
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# OTP Configuration
OTP_EXPIRY=600000 # 10 minutes in milliseconds

# URL Configuration
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Email Configuration (SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@your-domain.com

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Security Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here
ENCRYPTION_KEY=your_encryption_key_here 